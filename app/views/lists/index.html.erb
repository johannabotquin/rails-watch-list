<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://www.shutterstock.com/image-photo/cinema-blank-wide-screen-people-260nw-2314929885.jpg');">
  <div class="container">
    <h1>Save any kind of movie</h1>
  </div>
</div>

<div class="container my-lists">
  <div class="my-lists-bar d-flex justify-content-between">
    <h2>My lists</h2>
  </div>

    <div class="row">
      <div class="d-flex flex-wrap justify-content-between">
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <div class="card-category-list col-4 m-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= list.image_url %>');">
              <div class="list-card">
                <h1 class="list-name"> <%=  list.name  %> </h1>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="link-create-list d-flex justify-content-end">
      <%= link_to "Create a movie list", new_list_path, class:"btn btn-gradient" %>
    </div>
</div>
